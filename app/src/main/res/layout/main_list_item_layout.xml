<?xml version="1.0" encoding="utf-8"?>
<!--recycler view for MAIN FRAG-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:padding="15dp">

    <TextView
        android:id="@+id/habitBlock"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:gravity="center"
        android:padding="40dp"
        android:text="Habit Name"
        android:textColor="@color/mainText"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/topLine"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:background="@color/secondDarkestPink"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/habitBlock"
        app:layout_constraintEnd_toEndOf="@+id/rightLine"
        app:layout_constraintStart_toStartOf="@+id/leftLine"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/bottomLine"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:background="@color/secondDarkestPink"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/rightLine"
        app:layout_constraintStart_toStartOf="@+id/leftLine"
        app:layout_constraintTop_toBottomOf="@+id/habitBlock" />

    <View
        android:id="@+id/leftLine"
        android:layout_width="5dp"
        android:layout_height="210dp"
        android:background="@color/secondDarkestPink"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/habitBlock"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/bottomLine"
        app:layout_constraintTop_toBottomOf="@+id/topLine" />

    <View
        android:id="@+id/rightLine"
        android:layout_width="5dp"
        android:layout_height="0dp"
        android:background="@color/secondDarkestPink"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/bottomLine"
        app:layout_constraintStart_toEndOf="@+id/habitBlock"
        app:layout_constraintTop_toBottomOf="@+id/topLine" />
</androidx.constraintlayout.widget.ConstraintLayout>

