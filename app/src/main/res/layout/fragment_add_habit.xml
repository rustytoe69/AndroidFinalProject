<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="15dp"
    tools:context=".addHabitFragment"
    android:id="@+id/fragment_add_habit">

    <EditText
        android:id="@+id/startDateInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/mainText"
        android:inputType="text"
        android:textColor="#ABABAB"
        android:textColorLink="#FDE3D8"
        app:layout_constraintEnd_toEndOf="@+id/startDateTextView"
        app:layout_constraintTop_toBottomOf="@+id/startDateTextView" />

    <TextView
        android:id="@+id/habitNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Habit Name:"
        android:textColor="@color/mainText"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/startDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Start Date:"
        android:textColor="@color/mainText"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameInput" />


    <TextView
        android:id="@+id/confirmTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp"
        android:text="Confirm"
        android:textColor="@color/mainText"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/backArrowView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/backArrowView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/improved_back_arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/nameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/mainText"
        android:inputType="text"
        android:textColor="#ABABAB"
        android:textColorLink="#FDE3D8"
        app:layout_constraintEnd_toEndOf="@+id/habitNameTextView"
        app:layout_constraintStart_toStartOf="@+id/habitNameTextView"
        app:layout_constraintTop_toBottomOf="@+id/habitNameTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>